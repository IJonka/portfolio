---
interface Props {
  currentPage?: 'index' | 'projects' | 'contacts';
}
const { currentPage = 'index' } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<header class="header">
  <div class="container">
    <div class="header__container">
      <button class="burger" aria-label="Меню" aria-expanded="false">
        <img src={`${base}assets/icons/burger_menu.svg`} alt="" class="burger__icon-menu" />
        <img src={`${base}assets/icons/close.svg`} alt="" class="burger__icon-close" />
      </button>

      <div class="header__info">
        <p class="header__name">JAVOHIR IBRAGIMOV</p>
        <p class="header__location">Tashkent, Uzbekistan</p>
      </div>

      <nav class="nav">
        <ul class="nav__list">
          <li>
            <a href={base || '/'} class={`nav__link ${currentPage === 'index' ? 'nav__link--active' : ''}`}>Главная</a>
          </li>
          <li>
            <a href={`${base}projects/`} class={`nav__link ${currentPage === 'projects' ? 'nav__link--active' : ''}`}>Проекты</a>
          </li>
          <li>
            <a href={`${base}contacts/`} class={`nav__link ${currentPage === 'contacts' ? 'nav__link--active' : ''}`}>Контакты</a>
          </li>
        </ul>
      </nav>

      <address class="socials">
        <ul class="socials__list">
          <li><a href="#" class="socials__link"><img src={`${base}assets/icons/telegram.svg`} alt="" /></a></li>
          <li><a href="#" class="socials__link"><img src={`${base}assets/icons/whatsapp.svg`} alt="" /></a></li>
          <li><a href="#" class="socials__link"><img src={`${base}assets/icons/gmail.svg`} alt="" /></a></li>
        </ul>
      </address>

      <div class="mobile-overlay" id="mobile-menu">
        <nav class="mobile-nav">
          <a href={base || '/'} class={`mobile-nav__link ${currentPage === 'index' ? 'mobile-nav__link--active' : ''}`} aria-current={currentPage === 'index' ? 'page' : undefined}>Главная</a>
          <a href={`${base}projects/`} class={`mobile-nav__link ${currentPage === 'projects' ? 'mobile-nav__link--active' : ''}`}>Проекты</a>
          <a href={`${base}contacts/`} class={`mobile-nav__link ${currentPage === 'contacts' ? 'mobile-nav__link--active' : ''}`}>Контакты</a>
        </nav>
      </div>
    </div>
  </div>
</header>
