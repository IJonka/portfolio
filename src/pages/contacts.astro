---
import Layout from '../layouts/Layout.astro';
const base = import.meta.env.BASE_URL;
---
<Layout title="Мои контакты" currentPage="contacts">
  <div class="contacts-page">
    <div class="container">
      <section class="contacts-hero">
        <h1 class="contacts-hero__title">
          Хотите сотрудничать?<br />Свяжитесь со мной.
        </h1>
      </section>

      <section class="contact-form-section">
        <h2 class="section-subtitle">↳ Форма связи</h2>

        <div class="contact-form-wrapper">
          <form action="#" method="POST" class="contact-form">
            <div class="contact-form__row">
              <div class="contact-form__field">
                <label for="name" class="visually-hidden">Ваше имя</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  placeholder="Введите имя"
                  required
                />
              </div>
              <div class="contact-form__field">
                <label for="phone" class="visually-hidden">Номер телефона</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  placeholder="Введите номер телефона"
                  required
                />
              </div>
            </div>

            <div class="contact-form__field">
              <label for="telegram" class="visually-hidden">Ваш Telegram</label>
              <input
                type="text"
                id="telegram"
                name="telegram"
                placeholder="Ваш Telegram"
              />
            </div>

            <div class="contact-form__field">
              <label for="email" class="visually-hidden">Ваш Email</label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder="Ваш email (опционально)"
              />
            </div>

            <button type="submit" class="projects__all-link btn-submit">
              Отправить
            </button>
          </form>

          <section class="contacts-footer-info">
            <div class="contacts-direct">
              <div class="tag tag--uiux">Мои контакты</div>
              <a
                href="mailto:javohiribr@gmail.com"
                class="contacts-direct__link"
              >javohiribr@gmail.com</a>
              <a href="tel:+998938123060" class="contacts-direct__link"
                >+998 93 812 30 60</a>
            </div>

            <div class="social-icons">
              <div class="tag tag--product">Социальные сети</div>
              <div class="social-icons__list">
                <a href="#" class="social-icons__link"
                  ><img src={`${base}assets/icons/telegram.svg`} alt="Telegram"
                /></a>
                <a href="#" class="social-icons__link"
                  ><img src={`${base}assets/icons/whatsapp.svg`} alt="WhatsApp"
                /></a>
                <a href="#" class="social-icons__link"
                  ><img src={`${base}assets/icons/gmail.svg`} alt="Gmail"
                /></a>
              </div>
            </div>
          </section>
        </div>
      </section>
    </div>
  </div>
</Layout>
